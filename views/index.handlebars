<div class="container">
   <div class="row">
      <div class="col">
         <img src="" alt="Burger">
      </div>
   </div>
   <div class="row mt-5">
      <div class="col text-center">
         <h1>Burger Brainstorm Bonanza</h1>
      </div>
   </div>
   <div class="row mt-5">
      <div class="col">
         <form>
            <div class="form-group">
               <label for="burgerName">Burger Name</label>
               <input type="text" class="form-control" name="burgerName" id="burgerName"
                  placeholder="Your Burger's Name">
            </div>
            <div class="form-group">
               <label for="burgerName">Burger Toppings</label>
               <input type="text" class="form-control" name="burgerToppings" id="burgerToppings"
                  placeholder="What toppings for this burger?">
            </div>
            <button type="submit" class="btn btn-primary create-burger">Save</button>
         </form>
      </div>
   </div>
   <div class="row mt-5">
      <div class="col-sm-6">
         <h2>Ready to Eat</h2>
         <ul>
            {{#each burgers}}
            {{#unless eaten}}
            {{> burgers/burger-block eaten=true}}
            {{/unless}}
            {{/each}}
         </ul>
      </div>
      <div class="col-sm-6">
         <h2>Crushed That</h2>
         <ul>
            {{#each burgers}}
            {{#if eaten}}
            {{> burgers/burger-block eaten=false}}
            {{/if}}
            {{/each}}
         </ul>
      </div>
   </div>

</div>